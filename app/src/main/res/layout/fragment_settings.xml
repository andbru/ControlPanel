<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PID-parametrar med accelerationsterm Km"
        android:textSize="24sp"
        android:layout_marginBottom="35dp"
        android:textAlignment="center" />

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:text="Kp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:text="Kd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testKd"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:text="Ki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testKi"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:text="Km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testKm"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp">

        <Button
            android:text="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Kp"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Kd"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="0.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ki"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Km"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp">

        <Button
            android:text="-0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKpDec"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="+0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKpInc"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="-0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKdDec"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="+0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKdInc"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="-0.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKiDec"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="+0.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKiInc"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="-0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKmDec"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:text="+0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bKmInc"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>